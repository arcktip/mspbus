<div class="devise-control-group">
<h2>Forgot your password?</h2>

<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>

  <% unless resource.errors.full_messages.empty? %>
    <div class="alert alert-danger">Error: <%= resource.errors.full_messages.first %></div>
  <% end %>

  <div>
  <%= f.email_field :email, :autofocus => true, :placeholder => 'Email' %></div>

  <div><%= f.submit "Send me reset password instructions", class: 'btn btn-primary' %></div>
<% end %>

<%= render "devise/shared/links" %>
</div>
