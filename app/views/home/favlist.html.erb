<% if @stops.empty? %>
  <div class="alert alert-info">You haven't chosen any favorite stops yet.</div>
<% end %>

<div class="btn-group btn-group-vertical" style="width:100%;">
  <% @stops.each do |stop| %>
    <% if isBikeStop(stop.source_stops) %>
      <% puts stop.to_json %>
      <div class="btn niceride stopbutton" data-stopid="<%= stop.id %>">
        <div class="btn btn-danger trashstop pull-right" style="font-size:30px"><i class="icon-trash"></i></div>
        <div class="clearfix">
          <span class="pull-left directions-travel-mode-icon directions-bike-icon"></span>
          <span class="pull-left stop-name" style="font-weight:bold;">&nbsp; <%= stop.stop_name %></span>
          <span class="real-time clearfix pull-left" style="width: auto; margin-left: 10px;" id="<%= stop.id %>" data-attr="<%= stop.id %>" data-name="<%= stop.stop_name %>" data-realtime='<%= stop.source_stops.to_json.to_s %>'></span>
        </div>
      </div>
    <% else %>
      <div class="btn stopbutton" data-stopid="<%= stop.id %>">
        <div class="btn btn-danger trashstop pull-right" style="font-size:30px"><i class="icon-trash"></i></div>
        <a href="stop/<%= stop.stop_url %>">
          <span class="stop-name">
            <%= stop.stop_name %>
          </span>
          <div class="real-time clearfix" id="<%= stop.stop_id %>" data-attr="<%= stop.stop_id %>" data-name="<%= stop.stop_name %>" data-realtime='<%= stop.to_json.to_s %>'></div>
        </a>
      </div>
    <% end %>
  <% end %>
</div>
