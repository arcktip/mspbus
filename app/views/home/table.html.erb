<% if @stops.results.empty? %>
  <div class="alert alert-info">No stops found.</div>

<% end %>
<div class="" style="width:100%;">
  <% @stops.results.first(10).each do |stop| %>
    <% if isBikeStop(stop.source_stops) %>
      <div class="btn stopbutton niceride" data-stopid="<%= stop.id %>">
        <a href="stop/<%= stop.id %>">
          <div class="distance-label" style="position:absolute;top:-5px; right:5px;background:none;">
            <%= calculate_distance(stop) %>
          </div>
          <div class="clearfix">
            <span class="pull-left directions-travel-mode-icon directions-bike-icon"></span>
            <span class="pull-left" style="font-weight:bold;">&nbsp; <%= stop.stop_name %></span>
            <span class="real-time clearfix pull-left" style="width: auto; margin-left: 10px;" id="<%= stop.id %>" data-attr="<%= stop.id %>" data-name="<%= stop.stop_name %>" data-realtime='<%= stop.source_stops.to_json.to_s %>'></span>
          </div>
        </a>
      </div>
    <% else %>
      <div class="btn stopbutton" data-stopid="<%= stop.id %>">
        <a href="stop/<%= stop.id %>">
          <div style="position:absolute;right:5px;" class="distance-label">
            <%= calculate_distance(stop) %>
          </div>
          <span class="stop-name">
            <%= stop.stop_name %>
          </span>
          <div class="real-time clearfix" id="<%= stop.id %>" data-attr="<%= stop.id %>" data-name="<%= stop.stop_name %>" data-realtime='<%= stop.source_stops.to_json.to_s %>'></div>
        </a>
      </div>
    <% end %>
  <% end %>
</div>
