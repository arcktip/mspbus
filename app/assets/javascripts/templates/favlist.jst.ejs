<% if ( stops.size() === 0 ) { %>
  <div class="alert alert-info">You haven't chosen any favourite stops yet.</div>
<% } else { %>
  <div class="btn-group btn-group-vertical" style="width:100%;">
    <% stops.each( function(stop) { %>
      <% ids = stop.get('stop_id').split('-') %>
      <div class="btn stopbutton" data-stopid="<%= ids[1] %>" data-id="<%= stop.get('stop_id') %>">
        <div class="btn btn-danger trashstop pull-right" style="font-size:30px"><i class="icon-trash"></i></div>
        <a href="stop/<%= stop.get('stop_url') %>">
          <span class="stop-name"><%= stop.get('stop_name') %></span>
          <div class="real-time clearfix" id="<%= stop.get('stop_id') %>" data-attr="<%= stop.get('stop_id') %>" data-name="<%= stop.get('stop_name') %>" data-realtime='<%= JSON.stringify( stop ) %>'></div>
        </a>
      </div>
      <% }); %>
  </div>
<% } %>
